{% extends 'fr/base.html.twig' %}
{# Affichage modification admin planning  #}
{% block body %}
    <div class="jumbotron text-center">
	<h1>Semestre 2</h1>
		<tbody>
		<br/>
		<br/>
			<table class="table table-dark">

				<td>Planning</td>
                 <td>Monday</td>
                 <td>Tuesday</td>
                 <td>Wednesday</td>
                 <td>Thursday</td>
                 <td>Friday</td>
					{% for planning in planning %}

					<tbody>
						<tr>	
							<td>{{ planning.heure }}</td>

                            <td>{{ planning.lundi }}</td>
							<td>{{ planning.mardi }}</td>
							<td>{{ planning.mercredi }}</td>
							<td>{{ planning.jeudi }}</td>
							<td>{{ planning.vendredi }}   
								{% if is_granted('ROLE_ADMIN') == true %}
                                    <a class="btn btn-primary btn-sm" href="{{ path('planning_edit', { 'id': planning.id,'langue': 'fr' }) }}">Edit<i class="fa fa-pencil-square-o"></i> </a>
								{% endif %}
								</td>
								    
								

                          
						</tr>
					</tbody>
					 
			
                                    

                    {% endfor %}

			</table>

			{% if is_granted('ROLE_ADMIN') == true %}
				<a class="btn btn-success" href="{{ path('planning_new', {'langue': 'fr'}) }}"><i class="fa fa-plus-square"></i> Add a planning</a>
			{% endif %}
			
		</tbody>
    </div>
{% endblock %}