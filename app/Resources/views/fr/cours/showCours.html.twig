	    {% for affichage in affichage %}

<h3>{{affichage.titre}}</h3>

{{affichage.description}}
	   <br>
	   <br>
	   <br>
	   {% if is_granted('ROLE_TRAD') == true %}
							<a class="btn btn-primary btn-sm"  href="{{ path('lesson_edit_cours', { 'id': affichage.id, 'langue': 'fr' }) }}">Modifier {{affichage.titre}}<i class="fa fa-pencil-square-o"></i> </a>
{% endif %}
       {% endfor %}
    </div>
	{% if is_granted('ROLE_TRAD') == true %}
	<br>
	<a class="btn btn-outline-info my-2 my-sm-0" href="{{ path('lesson_add_cours', {'langue': 'fr'}) }}"><i class="fa fa-plus-square"></i> Ajouter un cours</a>
	{% endif %}
{% endblock %}
